<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="5dp"
        android:end="5dp"
        android:start="5dp"
        android:top="5dp">  <!--순서대로 아래쪽, 오른쪽, 왼쪽, 위쪽 테두리-->
        <shape android:shape="rectangle"> <!--사각형모양으로 테두리를 주겠다.-->
            <stroke
                android:width="1dp"
                android:color="#F44336" />
            <!--테두리 두께 설정, 테두리 색갈 설정-->
            <corners
                android:topRightRadius="10dp"
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"/>

            <solid android:color="#00FFFFFF" /> <!--내부 색 설정-->

        </shape>


    </item>

</layer-list>