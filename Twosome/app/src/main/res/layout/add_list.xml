<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_listView"
    android:background="@drawable/view_bg"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:background="@drawable/button_bg"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cookierun_bold"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="예약 리스트"
        android:textSize="30dp" />

    <!--제품 Layout-->
    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="제품 : "
            android:background="@drawable/button_bg"
            android:fontFamily="@font/cookierun_bold"
            android:textSize="30dp" />

        <AutoCompleteTextView
            android:id="@+id/autoEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierun_regular"
            android:hint="원하는 제픔을 클릭하세요."
            android:completionThreshold="1"
            android:padding="10dp" />

    </LinearLayout>

    <!--수량 Layout-->
    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="수량 : "
            android:background="@drawable/button_bg"
            android:fontFamily="@font/cookierun_bold"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/edit_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierun_regular"
            android:gravity="center"
            android:hint="수량만 적으세요! \n ex) 10"
            android:padding="10dp" />

    </LinearLayout>

    <!--날짜 Layout-->
    <LinearLayout
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="날짜 : "
            android:background="@drawable/button_bg"
            android:fontFamily="@font/cookierun_bold"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/edit_date"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="ex) 0807"
            android:fontFamily="@font/cookierun_regular"
            android:padding="10dp" />

    </LinearLayout>

    <!--예약자 Layout-->
    <LinearLayout
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="예약자 : "
            android:background="@drawable/button_bg"
            android:fontFamily="@font/cookierun_bold"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/edit_servername"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="예약자를 입력하세요! \n ex) 홍길동"
            android:fontFamily="@font/cookierun_regular"
            android:padding="10dp" />

    </LinearLayout>

    <!--특이사항 Layout-->
    <LinearLayout
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view4"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="특이사항 : "
            android:background="@drawable/button_bg"
            android:fontFamily="@font/cookierun_bold"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/edit_uniq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="특이사항"
            android:padding="10dp"
            android:fontFamily="@font/cookierun_regular"
            android:textSize="20dp" />


    </LinearLayout>


</RelativeLayout>